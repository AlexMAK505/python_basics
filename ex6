import math

# Запрашиваем тип фигуры и приводим к нижнему регистру для удобства сравнения
figure = input("Введите тип фигуры:\n").strip().lower()

if figure in ("круг", "circle"):
    radius = float(input("Введите радиус круга:\n"))
    if radius <= 0:
        print("Радиус должен быть положительным числом.")
    else:
        area = math.pi * radius ** 2
        print(f"Площадь круга: {area:.2f}")

elif figure in ("треугольник", "triangle"):
    a = float(input("Введите длину стороны A:\n"))
    b = float(input("Введите длину стороны B:\n"))
    c = float(input("Введите длину стороны C:\n"))
    
    # Проверка существования треугольника
    if a <= 0 or b <= 0 or c <= 0:
        print("Длины сторон должны быть положительными числами.")
    elif a + b <= c or a + c <= b or b + c <= a:
        print("Треугольник с такими сторонами не существует.")
    else:
        # Формула Герона
        s = (a + b + c) / 2  # полупериметр
        area = math.sqrt(s * (s - a) * (s - b) * (s - c))
        print(f"Площадь треугольника: {area:.2f}")

elif figure in ("прямоугольник", "rectangle"):
    side1 = float(input("Введите длину стороны 1:\n"))
    side2 = float(input("Введите длину стороны 2:\n"))
    if side1 <= 0 or side2 <= 0:
        print("Длины сторон должны быть положительными числами.")
    else:
        area = side1 * side2
        print(f"Площадь прямоугольника: {area:.2f}")

else:
    print("Неизвестный тип фигуры. Доступные варианты: круг, треугольник, прямоугольник.")
